{
  "name": "corestock",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "cross-env VITE_USE_HASH=1 vite build",
    "postbuild": "node -e \"const fs=require('fs');const path=require('path');const src=path.join('dist','index.html');const dest=path.join('dist','404.html');if(fs.existsSync(src)){fs.copyFileSync(src,dest);console.log('Copied index.html to 404.html');}\"",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "npm run build:prod && npm run postbuild && gh-pages -d dist -b gh-pages",
    "test:freeze": "playwright test",
    "test:freeze:ui": "playwright test --ui",
    "test:freeze:headed": "HEADLESS=false playwright test",
    "test:freeze:report": "playwright show-report test-results/html-report"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "class-variance-authority": "^0.7.1",
    "dayjs": "^1.11.18",
    "framer-motion": "^12.23.24",
    "html2pdf.js": "^0.12.1",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.548.0",
    "qrcode": "^1.5.4",
    "qrcode.react": "^4.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.66.0",
    "react-router-dom": "^7.9.5",
    "recharts": "^3.3.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.1.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "gh-pages": "^6.3.0",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.7.2",
    "vite": "^7.1.7"
  }
}
